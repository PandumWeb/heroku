<div class="body">
	<div class="main-wrap container">
		<div class="row">
			<div class="col-md-9 ts-main-left">
				<!-- HEADER -->
				<header>
					<div class="container">
						<div class="row">
							<div class="col-md-6 logo">
								<h3><a href="index.html" title="Trendy Stuff"><img src="images/logo.png" class="img-responsive" alt=""/></a></h3>
							</div>
							<div class="col-md-6">
								<ul class="ts-social">
									<li><a href="https://fr.linkedin.com/pub/linda-lor/b0/154/662"><span class="fa fa-linkedin"></span></a></li>
									<li><a href="https://twitter.com/lindalorweb"><span class="fa fa-twitter"></span></a></li>
								</ul>
							</div>
						</div>
					</div>
				</header>

				<!-- NAVIGATION -->
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<nav id="nav_menu">
								<ul>
									<li>
										<a href='/'><i class="fa fa-home"></i> Accueil</a>
									</li>
									<li><a href='/about'><i class="fa fa-user"></i> A propos</a></li>
									<li>
										<a href='/portfolio'><i class="fa fa-briefcase"></i> Portfolio</a>
									</li>
									<li>
										<a href='/resources'><i class="fa fa-globe"></i> Ressources</a>
									</li>
									<li  class='active'>
										<a href='/blog'><i class="fa fa-comment"></i> Blog</a>
									</li>
									<li><a href='/contact'><i class="fa fa-envelope"></i> Contact</a></li>
								</ul>
							</nav>
						</div>
					</div>
				</div>
				<div class="container">
					<div id="m-blog-content">
						<div class="row">
							<div class="col-md-12">
								<article class="item">
									<%= image_tag @post.image.url, :class=>"img-responsive" %>
										<h2><%= @post.title %></h2>
										<p class="text-right">Post√© le: <%= @post.created_at.strftime("%d %B %Y")%></p>
									<p class="text-right"><span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span>
										<%= link_to @post.category.name,category_posts_path(@post.category) %><p>
										<div class="sep2"></div>
										<p><%= raw(@post.body) %></p>
										<!-- Comments -->
										<div class="clearfix space20"></div>
										<div class="comments-wrap">
										
										<p><small></small></p>


											<h5><%= @post.comments.count %> commentaire(s)</h5>

							
											<%= render @post.comments %>
										</div>
										<div class="clearfix space20"></div>
										<div class="article-comment-form">
											<h5>Ajouter un commentaire</h5>

										<%= form_for ([@post,@post.comments.build]) do |f| %>
											<form>
												<div class="row">
												
														<span><i class="fa fa-user"></i></span>
														<%= f.text_field :name ,:class=>"form-control", :placeholder=>"name"%>
										
													
														 <%= f.text_area :body,:placeholder=>"message" %>
														    <%= f.submit  :value => "Ajouter un commentaire" %>
												
												</div>
											</form>
											<% end %>
										</div>
									</article>
								</div>
							</div>
						</div>
					</div>
					
            <footer>
                <div class="col-md-6">
                        <p>&copy; 2015 Linda LOR. All Rights Reserved</p>
                    </div>
             </footer>
      
				</div> <!-- ts-main-left -->
				<!-- SIDEBAR -->
				<%= render 'layouts/sidebar' %>
			</div>
		</div>
	</div>
